</div>
<div class="laporan-kehilangan-all">
  <div class="all" id="all">
    <%semua.forEach((index)=>{%>
    <div class="laporan-kehilangan-card" id="refresh-content">
      <form class="detailedVehicleId" action="/detailedVehicleId" method="post">
        <input type="hidden" value="<%=index._id%>" name="detailedVehicleId">
        <button type="post">
          <img class="vehicle-image" src="data:image/<%=index.vPhoto.contentType%>;base64,
                <%=index.vPhoto.data.toString('base64')%>" />
        </button>
      </form>
      <div class="informasi-kendaraan" id="informasi-kendaraan">
        <p class="plat-nomor"><%=index.vNumber%></p>
        <div class="informasi-kendaran-details">
          <div class="details">
            <img class="tag" src="/images/tag.png" alt="">
            <p class="deskripsi-title">
              Deskripsi Kendaraan
            </p>
            <p class="isi-deskripsi"><%=index.vModel%> | Warna <%=index.vColor%> | <%=index.vYears%></p>
          </div>
          <div class="details">
            <img class="clock" src="/images/clock.png" alt="">
            <p class="deskripsi-title">
              Waktu Kejadian
            </p>
            <p class="isi-deskripsi">
              <%=index.lostTime%>
              , di <%=index.lostLocation%></p>
          </div>
          <div class="details">
            <img class="loc" src="/images/location-marker.png" alt="">
            <p class=" deskripsi-title">
              Deskripsi Tambahan
            </p>
            <p class="isi-deskripsi"><%=index.description%></p>
          </div>
        </div>
      </div>
      <a href="https://wa.me/<%=index.handphoneNumber%>" target="_blank">
        <img class="tombol-hubungi-pemilik" src="/images/tombol_hubugi_pemilik.png" alt="">
      </a>
    </div>

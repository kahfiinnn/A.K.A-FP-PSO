<script>
  document.getElementById("semua").classList.add("hovered");

  function semuaCategory() {
    document.getElementById("semua").classList.add("hovered");
    document.getElementById("motor").classList.remove("hovered");
    document.getElementById("mobil").classList.remove("hovered");

    document.getElementById("all").style.display = "flex";
    document.getElementById("motorall").style.display = "none";
    document.getElementById("mobilall").style.display = "none";
  }

  function motorCategory() {
    document.getElementById("semua").classList.remove("hovered");
    document.getElementById("motor").classList.add("hovered");
    document.getElementById("mobil").classList.remove("hovered");

    document.getElementById("all").style.display = "none";
    document.getElementById("motorall").style.display = "flex";
    document.getElementById("mobilall").style.display = "none";
  }

  function mobilCategory() {
    document.getElementById("semua").classList.remove("hovered");
    document.getElementById("motor").classList.remove("hovered");
    document.getElementById("mobil").classList.add("hovered");

    document.getElementById("all").style.display = "none";
    document.getElementById("motorall").style.display = "none";
    document.getElementById("mobilall").style.display = "flex";
  }
</script>